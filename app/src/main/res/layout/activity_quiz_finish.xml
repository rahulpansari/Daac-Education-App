<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".QuizFinish">

    <TextView
        android:id="@+id/quiz_finish_text"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14sp"
        android:gravity="center_horizontal"
        android:text="Your Score"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/trophy"
        app:layout_constraintStart_toStartOf="@+id/trophy"
        app:layout_constraintTop_toBottomOf="@+id/trophy" />

    <TextView
        android:id="@+id/quiz_score"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/quiz_finish_text"
        app:layout_constraintStart_toStartOf="@+id/quiz_finish_text"
        app:layout_constraintTop_toBottomOf="@+id/quiz_finish_text" />

    <ImageView
        android:id="@+id/trophy"
        android:layout_width="132sp"
        android:layout_height="170sp"
        android:layout_marginStart="136sp"
        android:layout_marginTop="104sp"
        android:layout_marginEnd="143dp"
        android:background="#ffff"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trophy2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:text="You Have Passed the Quiz in 30 Minutes"
        app:layout_constraintEnd_toEndOf="@+id/quiz_score"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/quiz_score"
        app:layout_constraintTop_toBottomOf="@+id/quiz_score" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:text="done"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />


</androidx.constraintlayout.widget.ConstraintLayout>