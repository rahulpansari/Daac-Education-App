<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8sp">

    <TextView
        android:id="@+id/quiz_d_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do You Want To Finish The Interview Preparation?"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="14sp" />

    <Button

        android:id="@+id/quiz_d_yes"
        android:layout_width="188dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Yes"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/quiz_d_text"
        app:layout_constraintStart_toStartOf="@+id/quiz_d_text"
        app:layout_constraintTop_toBottomOf="@+id/quiz_d_text"/>

    <Button
        android:id="@+id/quiz_d_no"
        android:layout_width="188dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="No"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/quiz_d_yes"
        app:layout_constraintTop_toBottomOf="@+id/quiz_d_yes"/>
</LinearLayout>