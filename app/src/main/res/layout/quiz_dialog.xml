<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp">

    <TextView
        android:id="@+id/quiz_d_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Do You Want To Finish The Quiz?"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quiz_d_yes"
        android:layout_width="188dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Yes"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@+id/quiz_d_text"
        app:layout_constraintStart_toStartOf="@+id/quiz_d_text"
        app:layout_constraintTop_toBottomOf="@+id/quiz_d_text" />

    <Button
        android:id="@+id/quiz_d_no"
        android:layout_width="188dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="No"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="@+id/quiz_d_yes"
        app:layout_constraintTop_toBottomOf="@+id/quiz_d_yes" />
</androidx.constraintlayout.widget.ConstraintLayout>